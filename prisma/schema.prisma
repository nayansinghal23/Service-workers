generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id           Int      @id @default(autoincrement())
  title        String
  company      String
  location     String
  type         JobType
  salary       String
  description  String
  requirements String[]
  postedDate   DateTime @default(now())
  isRemote     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("jobs")
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}
